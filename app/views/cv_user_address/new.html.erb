<div id="wrapper">
    
    <!-- Sidebar -->
    <%= render 'welcome/sidebar'%>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%= render 'welcome/navigationbar'%>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!--Body Of the Page -->
                <h1 class="h4 text-gray-900 mb-4">Enter Your Address!</h1>
                <%= form_with scope: :address, url: personal_infos_path, local: true, html: { class: 'user' } do |f| %>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <%= f.text_field :nationality, autofocus: true, class: 'form-control form-control-user',
                            placeholder: 'Enter your nationality' %>
                        </div>

                        <div class="col-sm-6">
                            <%= f.text_field :province, class: 'form-control form-control-user',
                            placeholder: 'Enter your current province' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <%= f.text_field :city, autofocus: true, class: 'form-control form-control-user',
                            placeholder: 'Enter your current city' %>
                        </div>

                        <div class="col-sm-6">
                            <%= f.text_field :other, class: 'form-control form-control-user',
                            placeholder: 'Enter the remaining address' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <%= f.text_field :country, autofocus: true, class: 'form-control form-control-user',
                            placeholder: 'Enter your current country' %>
                        </div>

                        <div class="col-sm-6">
                            <%= f.number_field :post_cd, class: 'form-control form-control-user',
                            placeholder: 'Enter your current zip code' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <%= f.email_field :mail_id, autofocus: true, class: 'form-control form-control-user',
                            placeholder: 'Enter your contact number' %>
                        </div>

                        <div class="col-sm-6">
                            <%= f.telephone_field :phone_no, class: 'form-control form-control-user',
                            placeholder: 'Enter your mail id' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <%= f.url_field :linkedIn_url, autofocus: true, class: 'form-control form-control-user',
                            placeholder: 'Enter your linkedIn Url' %>
                        </div>

                        <div class="col-sm-6">
                            <%= f.url_field :twitter_url, class: 'form-control form-control-user',
                            placeholder: 'Enter your Twitter Url' %>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12 ">
                            <%= link_to 'Back', new_personal_info_path, class: 'btn btn-secondary btn-user' %>
                            <%= f.submit 'Next', class: 'btn btn-secondary btn-user float-right'  %>
                        </div>
                    </div>
                <% end %>
                <!--End Of the Page -->
            </div>
            <!-- End Page Content -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%= render 'welcome/footer' %>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%= render 'welcome/logoutModal' %>