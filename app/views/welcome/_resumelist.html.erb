<div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Resume No.</th>
          <th scope="col">Resume Name</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @resumes.each do |resume| %>
          <tr>
            <th scope="row"><%= resume.id %></th>
            <td><%= resume.resume_name %></td>
            <td><%= link_to 'PDF', resume_path(current_user, format: "pdf") %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>