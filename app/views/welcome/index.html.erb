<div id="wrapper">
    
    <!-- Sidebar -->
    <%= render 'welcome/sidebar'%>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%= render 'welcome/navigationbar'%>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <!--Body Of the Page -->
                <%= link_to 'Create CV', cv_user_main_details_create_path, 
                    class: 'btn btn-secondary btn-user float-right' %>
            </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%= render 'welcome/footer' %>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

